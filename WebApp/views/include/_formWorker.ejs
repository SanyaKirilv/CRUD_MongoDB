<form action="/api/workers" method="POST" id="add_worker">
    <div class="new_worker">
        <div class="form-group">
            <label for="LastName">LastName</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="LastName" value="" placeholder="Ivanov">
        </div>
        <div class="form-group">
            <label for="LastName">FirstName</label>
            <input type="text" name="FirstName" value="" placeholder="Ivan">
        </div>
        <div class="form-group">
            <label for="LastName">MiddleName</label>
            <input type="text" name="MiddleName" value="" placeholder="Ivanovich">
        </div>
        <div class="form-group">
            <label for="LastName">Salary</label>
            <input type="text" name="Salary" value="" placeholder="100">
        </div>
        <div class="form-group">
            <label for="LastName">Email</label>
            <input type="text" name="Email" value="" placeholder="Ivanov@example.com">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>