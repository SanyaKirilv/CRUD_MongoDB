<%-include('include/_header')%>

    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/transactions"><i class="fas fa-angle-double-left"></i> All Transactions</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Transactions</h2>
                <span class="text-light">Use the below to update an transactions</span>
            </div>

            <form method="POST" id="update_transaction">
                <div class="new-transaction">
                    <div class="form-group">
                        <label for="WorkerEmail">Worker email</label>
                        <input type="hidden" name="id" value="<%=transactions._id%>">
                        <input type="text" name="WorkerEmail" value="<%=transactions.WorkerEmail%>" placeholder="Petrov@example.com">
                    </div>
                    <div class="form-group">
                        <label for="WorkID">WorkID</label>
                        <input type="text" name="WorkID" value="<%=transactions.WorkID%>" placeholder="0">
                    </div>
                    <div class="form-group">
                        <label for="WorkType">WorkType</label>
                        <input type="text" name="WorkType" value="<%=transactions.WorkType%>" placeholder="Clean">
                    </div>
            
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>

                </div>
            </form>
        </div>
    </main>

<%-include('include/_footer')%>